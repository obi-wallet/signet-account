{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "webworker", "dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules"]
}
